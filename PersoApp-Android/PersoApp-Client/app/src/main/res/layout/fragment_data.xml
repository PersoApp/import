<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="de.persoapp.android.activity.AuthenticateActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                style="@style/StackTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="@string/required_fields" />

        <include
                android:id="@+id/card_required_fields_container"
                style="@style/CardStyle"
                layout="@layout/card_data_fields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <TextView
                style="@style/StackTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="@string/optional_fields" />

        <include
                android:id="@+id/card_optional_fields_container"
                style="@style/CardStyle"
                layout="@layout/card_data_fields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

    </LinearLayout>


</ScrollView>
