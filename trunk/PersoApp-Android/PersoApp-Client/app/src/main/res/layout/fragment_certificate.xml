<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="de.persoapp.android.activity.AuthenticateActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/card_padding">

        <TextView
                style="@style/StackTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="@string/certificate_service_provider" />

        <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_padding"
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:padding="@dimen/card_padding_inner">

            <TextView
                    android:id="@+id/textView_service_provider_subject_name"
                    style="@style/CardDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="@string/app_name" />

            <TextView
                    android:id="@+id/textView_service_provider_subject_url"
                    style="@style/CardDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="@string/app_name" />

            <TextView
                    android:id="@+id/textView_service_provider_date"
                    style="@style/CardDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="@string/app_name" />

            <TextView
                    style="@style/CardDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/card_padding_inner"
                    android:text="@string/transaction_data"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/textView_service_provider_transaction"
                    style="@style/CardDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="@string/app_name" />

            <TextView
                    android:id="@+id/textView_service_provider_terms_of_usage"
                    style="@style/CardDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="@string/app_name" />
        </LinearLayout>

        <TextView
                style="@style/StackTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="@string/certificate_issuer" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_padding"
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:padding="@dimen/card_padding_inner">

            <TextView
                    android:id="@+id/textView_certificate_issuer_name"
                    style="@style/CardDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="@string/app_name" />

            <TextView
                    android:id="@+id/textView_certificate_issuer_url"
                    style="@style/CardDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="@string/app_name" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>

