<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                style="@style/StackTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="@string/new_pin" />

        <de.persoapp.android.view.PinRow
                android:id="@+id/pinRow_new_pin"
                style="@style/CardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <TextView
                style="@style/StackTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="@string/new_pin_confirm" />

        <de.persoapp.android.view.PinRow
                android:id="@+id/pinRow_new_pin_confirm"
                style="@style/CardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <TextView
                android:id="@+id/textView_new_pin_description"
                style="@style/CardDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_padding"
                android:background="@drawable/card_background"
                android:padding="@dimen/card_padding_inner"
                tools:text="@string/landing_page_description" />

    </LinearLayout>
</ScrollView>
